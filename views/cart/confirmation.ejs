<!-- confirmation.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/nav') %>

    <div class="container">
        <h1>Payment Successful</h1>
        <p>Thank you for your order, <%= name %> <%= surname %>!</p>
        <p>Your payment has been processed successfully.</p>

        <h3>Receipt</h3>
        <p><strong>Shipping Address:</strong> <%= address %></p>
        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.quantity %></td>
                        <td>$<%= item.price.toFixed(2) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <h3>Total: $<%= totalPrice.toFixed(2) %></h3>
    </div>
</body>

</html>
