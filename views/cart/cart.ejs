<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container">
        <h1>Hello, <%= user ? user.username : "Guest" %>! Your Shopping Cart</h1>
    
        <% if (reservations.length > 0) { %>
            <h2>Your Reservations:</h2>
            <ul>
                <% reservations.forEach(reservation => { %>
                    <li>
                        <strong>Date:</strong> <%= reservation.date %>,
                        <strong>Time:</strong> <%= reservation.time %>,
                        <strong>Adults:</strong> <%= reservation.num_adults %>,
                        <strong>Children:</strong> <%= reservation.num_children %>
                        <% if (reservation.comment) { %>, <strong>Comment:</strong> <%= reservation.comment %><% } %>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    
        <% if (items.length > 0) { %>
            <h2>Your Cart Items:</h2>
            <ul>
                <% items.forEach(item => { %>
                    <li>
                        <strong>Product:</strong> <%= item.product_name %>,
                        <strong>Quantity:</strong> <%= item.quantity %>,
                        <strong>Total:</strong> €<%= item.total_price.toFixed(2) %>
                    </li>
                <% }); %>
            </ul>
            <h3>Total Price: €<%= totalPrice.toFixed(2) %></h3>
        <% } else { %>
            <p>Your cart is empty.</p>
        <% } %>
    </div>
    